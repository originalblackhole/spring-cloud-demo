pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3-alpine'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                git 'https://github.com/originalblackhole/spring-cloud-demo.git'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('docker build'){
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'server-eureka'
                }
            }
            steps {
                sh "docker build -t server/eureka:latest ."
            }
        }

        stage('deploy'){
            steps {
                sh ' ./docker.sh'
            }
        }
    }
}